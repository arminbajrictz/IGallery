<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/blog_details_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/blogdetailsbg"
        />

    <TextView
        android:id="@+id/titleBlogDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Blog Title"
        android:textAlignment="center"
        android:textColor="#0F1D8F"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blog_details_bg"
        app:layout_constraintVertical_bias="0.057" />

    <ImageView
        android:id="@+id/blog_details_photo"
        android:layout_width="217dp"
        android:layout_height="233dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="96dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blog_details_bg"
        />

    <TextView
        android:id="@+id/blogDetailsText"
        android:layout_width="333dp"
        android:layout_height="121dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:scrollbars="vertical"
        android:text="Description:"
        android:textAlignment="textStart"
        android:textColor="#0F1D8F"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blog_details_bg" />

    <Button
        android:id="@+id/backToBlogsButt"
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/btn_rounded"
        android:onClick="backToBlogsUser"
        android:text="Back to blogs"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blog_details_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>